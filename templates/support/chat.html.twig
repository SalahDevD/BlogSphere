{% extends 'base.html.twig' %}

{% block title %}Chatbot - BlogSphere{% endblock %}

{% block stylesheets %}
<style>
    .chat-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1.5rem;
    }

    .chat-header {
        background: var(--white);
        border-radius: 16px 16px 0 0;
        padding: 1.5rem;
        border-bottom: 2px solid var(--gray-200);
    }

    .chat-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-900);
    }

    .chat-messages {
        background: var(--white);
        padding: 2rem;
        min-height: 400px;
        max-height: 600px;
        overflow-y: auto;
    }

    .message {
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
    }

    .message-sent {
        align-items: flex-end;
    }

    .message-received {
        align-items: flex-start;
    }

    .message-bubble {
        max-width: 70%;
        padding: 1rem 1.5rem;
        border-radius: 16px;
        word-wrap: break-word;
        white-space: pre-wrap;
        line-height: 1.5;
    }

    .message-sent .message-bubble {
        background: var(--orange-primary);
        color: white;
    }

    .message-received .message-bubble {
        background: var(--gray-100);
        color: var(--gray-900);
    }

    .message-meta {
        font-size: 0.75rem;
        color: var(--gray-500);
        margin-top: 0.5rem;
    }

    .chat-input {
        background: var(--white);
        border-radius: 0 0 16px 16px;
        padding: 1.5rem;
        border-top: 2px solid var(--gray-200);
    }

    .chat-input form {
        display: flex;
        gap: 1rem;
    }

    .chat-input textarea {
        flex: 1;
        padding: 1rem;
        border: 2px solid var(--gray-300);
        border-radius: 12px;
        resize: none;
        font-family: 'Inter', sans-serif;
    }

    .chat-input textarea:focus {
        outline: none;
        border-color: var(--orange-primary);
    }

    .chat-input button {
        padding: 1rem 2rem;
        background: var(--orange-primary);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .chat-input button:hover {
        background: #e65a2f;
    }

    .chat-input button:disabled {
        background: var(--gray-400);
        cursor: not-allowed;
    }

    .empty-chat {
        text-align: center;
        color: var(--gray-500);
        padding: 3rem;
    }

    .typing-indicator {
        display: flex;
        gap: 4px;
        padding: 1rem 1.5rem;
    }

    .typing-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--gray-400);
        animation: typing 1.4s infinite;
    }

    .typing-dot:nth-child(2) {
        animation-delay: 0.2s;
    }

    .typing-dot:nth-child(3) {
        animation-delay: 0.4s;
    }

    @keyframes typing {
        0%, 60%, 100% {
            opacity: 0.5;
            transform: translateY(0);
        }
        30% {
            opacity: 1;
            transform: translateY(-10px);
        }
    }

    .chatbot-badge {
        display: inline-block;
        background: #e0f2fe;
        color: #0369a1;
        padding: 0.25rem 0.75rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="chat-container">
    <div class="chat-header">
        <h1 class="chat-title">ðŸ¤– ChatBot - Assistance AutomatisÃ©e</h1>
        <p style="color: var(--gray-600); margin-top: 0.5rem;">Posez vos questions, notre chatbot intelligent vous rÃ©pondra instantanÃ©ment !</p>
    </div>

    <div class="chat-messages" id="chatMessages">
        {% if messages|length > 0 %}
            {% for message in messages %}
                <div class="message {% if message.isFromUser %}message-sent{% else %}message-received{% endif %}">
                    {% if not message.isFromUser %}
                        <span class="chatbot-badge">ðŸ¤– ChatBot</span>
                    {% endif %}
                    <div class="message-bubble">
                        {{ message.content }}
                    </div>
                    <div class="message-meta">
                        {{ message.createdAtTime }}
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-chat">
                ðŸ‘‹ Bienvenue ! Bonjour, je suis votre assistant ChatBot. Posez-moi vos questions, je suis lÃ  pour vous aider !
            </div>
        {% endif %}
    </div>

    <div class="chat-input">
        <form method="POST" id="chatForm">
            <textarea name="message" id="messageInput" rows="3" placeholder="Posez votre question..." required></textarea>
            <button type="submit" id="sendBtn">Envoyer</button>
        </form>
    </div>
</div>

<script>
// Auto-scroll vers le bas
const chatMessages = document.getElementById('chatMessages');
chatMessages.scrollTop = chatMessages.scrollHeight;

// Gestion du formulaire et du chatbot
document.getElementById('chatForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    const messageInput = document.getElementById('messageInput');
    const sendBtn = document.getElementById('sendBtn');
    const userMessage = messageInput.value.trim();

    if (!userMessage) return;

    // Afficher le message de l'utilisateur
    const userMsgDiv = document.createElement('div');
    userMsgDiv.className = 'message message-sent';
    userMsgDiv.innerHTML = `
        <div class="message-bubble">${userMessage}</div>
        <div class="message-meta">${new Date().toLocaleTimeString('fr-FR', {hour: '2-digit', minute:'2-digit'})}</div>
    `;
    chatMessages.appendChild(userMsgDiv);

    // DÃ©sactiver le bouton et effacer le champ
    sendBtn.disabled = true;
    messageInput.value = '';
    messageInput.focus();

    // Afficher l'indicateur de saisie
    const typingDiv = document.createElement('div');
    typingDiv.className = 'message message-received';
    typingDiv.id = 'typing';
    typingDiv.innerHTML = `
        <span class="chatbot-badge">ðŸ¤– ChatBot</span>
        <div class="typing-indicator">
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
        </div>
    `;
    chatMessages.appendChild(typingDiv);
    chatMessages.scrollTop = chatMessages.scrollHeight;

    try {
        const response = await fetch('{{ path("api_chat_send_message") }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                content: userMessage
            })
        });

        const data = await response.json();

        // Supprimer l'indicateur de saisie
        typingDiv.remove();

        if (data.success) {
            // Afficher la rÃ©ponse du chatbot
            const botMsgDiv = document.createElement('div');
            botMsgDiv.className = 'message message-received';
            botMsgDiv.innerHTML = `
                <span class="chatbot-badge">ðŸ¤– ChatBot</span>
                <div class="message-bubble">${data.botResponse}</div>
                <div class="message-meta">${new Date().toLocaleTimeString('fr-FR', {hour: '2-digit', minute:'2-digit'})}</div>
            `;
            chatMessages.appendChild(botMsgDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        } else {
            alert('Erreur: ' + data.error);
        }
    } catch (error) {
        console.error('Erreur:', error);
        typingDiv.remove();
        alert('Erreur de connexion. Veuillez rÃ©essayer.');
    } finally {
        sendBtn.disabled = false;
        messageInput.focus();
    }
});

// Charger les messages Ã  l'ouverture
async function loadMessages() {
    try {
        const response = await fetch('{{ path("api_chat_get_messages") }}');
        const messages = await response.json();
        
        // Les messages sont dÃ©jÃ  affichÃ©s cÃ´tÃ© serveur, pas besoin de les recharger
    } catch (error) {
        console.error('Erreur lors du chargement des messages:', error);
    }
}

// Permettre Shift+Enter pour envoyer le message
document.getElementById('messageInput').addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        document.getElementById('chatForm').dispatchEvent(new Event('submit'));
    }
});
</script>
{% endblock %}

