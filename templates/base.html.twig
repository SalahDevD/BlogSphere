        @keyframes fadeIn {
            from { 
                opacity: 0; 
                transform: translateY(15px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }

        @keyframes slideOutRight {
            to { 
                opacity: 0; 
                transform: translateX(150px); 
            }
        }
    </style>
