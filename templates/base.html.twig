    <footer>
        <div class="container">
            <div>
                <h3>BlogSphere</h3>
                <p>Une plateforme de blog moderne et collaborative pour partager vos id√©es avec le monde.</p>
            </div>
            <div>
                <h3>Liens rapides</h3>
                <ul>
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_article_index') }}">Articles</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('user_profile_index') }}">Mon Profil</a></li>
                    {% endif %}
                </ul>
            </div>
            <div>
                <h3>Nous contacter</h3>
                <ul>
                    <li>Email: <a href="mailto:support@blogsphere.com">support@blogsphere.com</a></li>
                    <li>T√©l√©phone: +212 5XX XXX XXX</li>
                </ul>
            </div>
            <div>
                <h3>√Ä propos</h3>
                <ul>
                    <li><a href="#">Conditions d'utilisation</a></li>
                    <li><a href="#">Politique de confidentialit√©</a></li>
                    <li><a href="#">Nous rejoindre</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script>
        document.querySelectorAll('.alert').forEach(alert => {
            setTimeout(() => {
                alert.style.animation = 'slideOutRight 0.4s ease';
                setTimeout(() => alert.remove(), 400);
            }, 5000);
        });

        function toggleSupportChat() {
            const popup = document.getElementById('supportChatPopup');
            if (popup) {
                popup.classList.toggle('active');
                if (popup.classList.contains('active')) {
                    const input = document.getElementById('chatInput');
                    if (input) input.focus();
                }
            }
        }

        function sendSupportMessage(event) {
            event.preventDefault();
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (message) {
                const messagesContainer = document.getElementById('chatMessages');
                const messageDiv = document.createElement('div');
                messageDiv.className = 'chat-message chat-message-sent';
                messageDiv.innerHTML = `<div class="chat-message-bubble">${escapeHtml(message)}</div>`;
                messagesContainer.appendChild(messageDiv);
                input.value = '';
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
                setTimeout(() => {
                    const confirmDiv = document.createElement('div');
                    confirmDiv.className = 'chat-message chat-message-received';
                    confirmDiv.innerHTML = `<div class="chat-message-bubble">‚úì Message re√ßu. Un superviseur vous r√©pondra bient√¥t.</div>`;
                    messagesContainer.appendChild(confirmDiv);
                    messagesContainer.scrollTop = messagesContainer.scrollHeight;
                }, 500);
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>
