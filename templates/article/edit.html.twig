{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 3rem auto; padding: 2rem; background: white; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
    <h1 style="font-size: 2rem; font-weight: 900; color: #111827; margin-bottom: 2rem;">‚úèÔ∏è Modifier l'article</h1>

    {{ form_start(form) }}
        <div style="margin-bottom: 1.5rem;">
            {{ form_label(form.title, 'Titre', {'label_attr': {'style': 'display: block; font-weight: 600; color: #374151; margin-bottom: 0.5rem;'}}) }}
            {{ form_widget(form.title, {'attr': {'style': 'width: 100%; padding: 0.75rem; border: 2px solid #e5e7eb; border-radius: 8px;'}}) }}
        </div>

        <div style="margin-bottom: 1.5rem;">
            {{ form_label(form.content, 'Contenu', {'label_attr': {'style': 'display: block; font-weight: 600; color: #374151; margin-bottom: 0.5rem;'}}) }}
            {{ form_widget(form.content, {'attr': {'style': 'width: 100%; padding: 0.75rem; border: 2px solid #e5e7eb; border-radius: 8px; min-height: 250px;'}}) }}
        </div>

        <div style="margin-bottom: 1.5rem;">
            {{ form_label(form.category, 'Cat√©gorie', {'label_attr': {'style': 'display: block; font-weight: 600; color: #374151; margin-bottom: 0.5rem;'}}) }}
            {{ form_widget(form.category, {'attr': {'style': 'width: 100%; padding: 0.75rem; border: 2px solid #e5e7eb; border-radius: 8px;'}}) }}
        </div>

        <button type="submit" style="width: 100%; padding: 0.75rem; background: linear-gradient(135deg, #FF6B35, #E85A2A); color: white; border: none; border-radius: 8px; font-weight: 700; cursor: pointer; margin-bottom: 1rem;">üíæ Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_article_show', {id: article.id}) }}" style="display: inline-block; padding: 0.5rem 1rem; background: #e5e7eb; color: #374151; text-decoration: none; border-radius: 8px; font-weight: 600;">‚Üê Annuler</a>
</div>
{% endblock %}
