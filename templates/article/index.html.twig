{% extends 'base.html.twig' %}

{% block title %}Articles - BlogSphere{% endblock %}

{% block stylesheets %}
<style>
    .articles-container {
        background: linear-gradient(180deg, var(--cream-light) 0%, var(--white) 50%, var(--cream) 100%);
        min-height: 100vh;
        padding: 4rem 0;
    }

    .articles-header {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
    }

    .articles-header h1 {
        font-family: 'Playfair Display', serif;
        font-size: 2.8rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--brown-primary) 0%, var(--gold) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .articles-header .btn {
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, var(--gold) 0%, var(--beige-primary) 100%);
        color: var(--dark-brown);
        text-decoration: none;
        border-radius: 50px;
        font-weight: 700;
        transition: all 0.3s;
        box-shadow: 0 6px 20px rgba(201, 169, 97, 0.4);
    }

    .articles-header .btn:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 10px 30px rgba(201, 169, 97, 0.6);
    }

    .filters-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        margin-bottom: 3rem;
    }

    .filters-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--brown-primary);
        margin-bottom: 1rem;
    }

    .filters-list {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .filter-btn {
        padding: 0.6rem 1.5rem;
        border: 2px solid var(--beige-light);
        background: var(--white);
        border-radius: 50px;
        cursor: pointer;
        font-weight: 600;
        color: var(--gray-700);
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 12px rgba(139, 90, 60, 0.08);
    }

    .filter-btn:hover,
    .filter-btn.active {
        border-color: var(--gold);
        background: linear-gradient(135deg, var(--beige-primary) 0%, var(--gold) 100%);
        color: var(--dark-brown);
        box-shadow: 0 8px 20px rgba(139, 90, 60, 0.2);
        transform: translateY(-2px);
    }

    .articles-grid-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
    }

    .article-card {
        background: var(--white);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 6px 20px rgba(139, 90, 60, 0.12);
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        display: flex;
        flex-direction: column;
        height: 100%;
        border: 2px solid var(--gray-200);
    }

    .article-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 20px 50px rgba(139, 90, 60, 0.25);
        border-color: var(--beige-primary);
    }

    .article-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .article-card:hover img {
        transform: scale(1.1);
    }

    .article-card-placeholder {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, var(--cream) 0%, var(--beige-light) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: var(--brown-primary);
        opacity: 0.3;
    }

    .article-card-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .article-category {
        display: inline-block;
        padding: 0.4rem 1rem;
        background: linear-gradient(135deg, var(--beige-primary) 0%, var(--gold) 100%);
        color: var(--dark-brown);
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 1rem;
        width: fit-content;
        box-shadow: 0 4px 12px rgba(201, 169, 97, 0.3);
    }

    .article-card-content h2 {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        font-weight: 800;
        color: var(--brown-primary);
        margin-bottom: 0.75rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: color 0.3s ease;
    }

    .article-card:hover h2 {
        color: var(--gold);
    }

    .article-card-content p {
        color: var(--gray-700);
        margin-bottom: 1.5rem;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .article-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 2px solid var(--gray-200);
    }

    .article-meta {
        font-size: 0.85rem;
        color: var(--gray-600);
        font-weight: 600;
    }

    .article-meta strong {
        color: var(--brown-primary);
    }

    .read-more {
        padding: 0.6rem 1.2rem;
        background: linear-gradient(135deg, var(--gold) 0%, var(--beige-primary) 100%);
        color: var(--dark-brown);
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(201, 169, 97, 0.3);
    }

    .read-more:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 8px 20px rgba(201, 169, 97, 0.5);
    }

    .empty-state {
        background: var(--white);
        padding: 4rem;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 6px 20px rgba(139, 90, 60, 0.12);
        border: 2px solid var(--gray-200);
    }

    .empty-state-emoji {
        font-size: 5rem;
        margin-bottom: 1rem;
    }

    .empty-state h2 {
        font-family: 'Playfair Display', serif;
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--brown-primary);
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: var(--gray-700);
        margin-bottom: 1.5rem;
    }

    .empty-state .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, var(--gold) 0%, var(--beige-primary) 100%);
        color: var(--dark-brown);
        text-decoration: none;
        border-radius: 50px;
        font-weight: 700;
        box-shadow: 0 6px 20px rgba(201, 169, 97, 0.4);
        transition: all 0.3s;
    }

    .empty-state .btn:hover {
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 10px 30px rgba(201, 169, 97, 0.6);
    }

    @media (max-width: 768px) {
        .articles-header {
            flex-direction: column;
            gap: 1.5rem;
        }

        .articles-header h1 {
            font-size: 2rem;
        }

        .articles-grid {
            grid-template-columns: 1fr;
        }

        .filters-list {
            flex-direction: column;
        }

        .filter-btn {
            width: 100%;
            text-align: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="articles-container">
    <div class="articles-header">
        <h1>Articles</h1>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_article_new') }}" class="btn">‚úçÔ∏è Nouveau</a>
        {% endif %}
    </div>

    {# Filter Section #}
    <div class="filters-section">
        <h3 class="filters-title">Filtrer par cat√©gorie:</h3>
        <div class="filters-list">
            <a href="{{ path('app_article_index') }}" class="filter-btn {% if not selectedCategory %}active{% endif %}">Toutes les cat√©gories</a>
            {% for category in categories %}
                <a href="{{ path('app_article_index', {category: category.id}) }}" class="filter-btn {% if selectedCategory and selectedCategory.id == category.id %}active{% endif %}">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="articles-grid-container">
        {% if articles|length > 0 %}
            <div class="articles-grid">
                {% for article in articles %}
                    <article class="article-card">
                        {% if article.image %}
                            <img src="{{ asset('uploads/articles/' ~ article.image) }}" alt="{{ article.title }}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        {% endif %}
                        <div class="article-card-placeholder" style="display: none;">üìÑ</div>
                        
                        <div class="article-card-content">
                            {% if article.category %}
                                <span class="article-category">{{ article.category.name }}</span>
                            {% endif %}
                            
                            <h2>{{ article.title }}</h2>
                            <p>{{ article.content|striptags|slice(0, 120) }}...</p>
                            
                            <div class="article-card-footer">
                                <div class="article-meta">
                                    <strong>{{ article.author.name }}</strong><br>
                                    {{ article.createdAt|date('d M Y') }}
                                </div>
                                <a href="{{ path('app_article_show', {id: article.id}) }}" class="read-more">Lire ‚Üí</a>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <p class="empty-state-emoji">üì≠</p>
                <h2>Aucun article</h2>
                <p>Soyez le premier √† partager !</p>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_article_new') }}" class="btn">Cr√©er un article</a>
                {% else %}
                    <p style="color: #999; margin-top: 1rem;">Connectez-vous pour cr√©er votre premier article</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
