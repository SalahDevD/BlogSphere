{% extends 'base.html.twig' %}

{% block title %}Articles - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/article.css') }}">
{% endblock %}

{% block body %}
<div class="articles-container">
    <div class="articles-header">
        <h1>Articles</h1>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_article_new') }}" class="btn" style="border: 2px #543A14 solid">‚úçÔ∏è Nouveau</a>
        {% endif %}
    </div>

    {# Filter Section #}
    <div class="filters-section">
        <h3 class="filters-title">Filtrer par cat√©gorie:</h3>
        <div class="filters-list">
            <a href="{{ path('app_article_index') }}" class="filter-btn {% if not selectedCategory %}active{% endif %}">Toutes les cat√©gories</a>
            {% for category in categories %}
                <a href="{{ path('app_article_index', {category: category.id}) }}" class="filter-btn {% if selectedCategory and selectedCategory.id == category.id %}active{% endif %}">
                    {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="articles-grid-container">
        {% if articles|length > 0 %}
            <div class="articles-grid">
                {% for article in articles %}
                    <article class="article-card">
                        {% if article.image %}
                            <img src="{{ asset('uploads/articles/' ~ article.image) }}" alt="{{ article.title }}" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        {% endif %}
                        <div class="article-card-placeholder" style="display: none;">üìÑ</div>
                        
                        <div class="article-card-content">
                            {% if article.category %}
                                <span class="article-category">{{ article.category.name }}</span>
                            {% endif %}
                            
                            <h2>{{ article.title }}</h2>
                            <p>{{ article.content|striptags|slice(0, 120) }}...</p>
                            
                            <div class="article-card-footer">
                                <div class="article-meta">
                                    <strong>{{ article.authorName ?? (article.author.name ?? '') }}</strong><br>
                                    {{ article.createdAt|date('d M Y') }}
                                </div>
                                <a href="{{ path('app_article_show', {id: article.id}) }}" class="read-more">Lire ‚Üí</a>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <p class="empty-state-emoji">üì≠</p>
                <h2>Aucun article</h2>
                <p>Soyez le premier √† partager !</p>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_article_new') }}" class="btn">Cr√©er un article</a>
                {% else %}
                    <p style="color: #999; margin-top: 1rem;">Connectez-vous pour cr√©er votre premier article</p>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
