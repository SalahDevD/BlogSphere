{% extends 'base.html.twig' %}

{% block title %}Dashboard Superviseur - Mod√©ration{% endblock %}

{% block stylesheets %}
<style>
    .supervisor-layout {
        padding: 3rem 0 4rem;
    }

    .supervisor-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        padding: 1.75rem 2rem;
        background: linear-gradient(135deg, #FF6B35, #E85A2A);
        border-radius: 18px;
        color: #ffffff;
        position: relative;
        overflow: hidden;
    }

    .supervisor-header::before,
    .supervisor-header::after {
        content: '';
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.12);
    }

    .supervisor-header::before {
        width: 220px;
        height: 220px;
        top: -80px;
        right: -40px;
    }

    .supervisor-header::after {
        width: 140px;
        height: 140px;
        bottom: -60px;
        left: -30px;
    }

    .supervisor-header-main {
        position: relative;
        z-index: 1;
    }

    .supervisor-header-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.25rem;
    }

    .supervisor-header-title span.icon {
        font-size: 1.9rem;
    }

    .supervisor-header-title h1 {
        font-size: 1.7rem;
        font-weight: 800;
        margin: 0;
    }

    .supervisor-header-subtitle {
        font-size: 0.98rem;
        opacity: 0.95;
    }

    .supervisor-header-actions {
        position: relative;
        z-index: 1;
        display: flex;
        gap: 0.75rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .btn-soft-light {
        background: rgba(255, 255, 255, 0.16);
        border: 1px solid rgba(255, 255, 255, 0.35);
        color: #ffffff;
        padding: 0.6rem 1.3rem;
        border-radius: 999px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        transition: all 0.2s ease;
    }

    .btn-soft-light:hover {
        background: #ffffff;
        color: #FF6B35;
        text-decoration: none;
    }

    .supervisor-grid {
        display: grid;
        grid-template-columns: minmax(0, 1.8fr) minmax(0, 1.2fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .supervisor-card {
        background: #ffffff;
        border-radius: 16px;
        border: 1px solid #e5e7eb;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.04);
        overflow: hidden;
    }

    .supervisor-card-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f3f4f6;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .supervisor-card-header-title {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-size: 1rem;
        font-weight: 700;
        color: #111827;
    }

    .supervisor-card-header-title span.icon {
        font-size: 1.3rem;
    }

    .supervisor-card-header-subtitle {
        font-size: 0.82rem;
        color: #6b7280;
    }

    .supervisor-card-body {
        padding: 1.5rem;
    }

    .supervisor-kpi-row {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 1rem;
    }

    .supervisor-kpi {
        border-radius: 12px;
        padding: 1rem 1.25rem;
        background: #fffbeb;
        border: 1px solid #f97316;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .supervisor-kpi.red {
        background: #fef2f2;
        border-color: #ef4444;
    }

    .supervisor-kpi-label {
        font-size: 0.85rem;
        color: #6b7280;
        margin-bottom: 0.15rem;
    }

    .supervisor-kpi-title {
        font-size: 0.95rem;
        font-weight: 700;
        color: #111827;
    }

    .supervisor-kpi-value {
        font-size: 1.8rem;
        font-weight: 800;
        color: #111827;
    }

    .supervisor-table-wrapper {
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        overflow: hidden;
    }

    .supervisor-table-header {
        padding: 0.75rem 1rem;
        background: #f9fafb;
        border-bottom: 1px solid #e5e7eb;
        font-size: 0.85rem;
        font-weight: 600;
        color: #6b7280;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .supervisor-table-header span.count-pill {
        background: #111827;
        color: #ffffff;
        border-radius: 999px;
        padding: 0.15rem 0.7rem;
        font-size: 0.78rem;
        font-weight: 600;
    }

    .supervisor-table {
        width: 100%;
        border-collapse: collapse;
    }

    .supervisor-table th,
    .supervisor-table td {
        padding: 0.65rem 0.9rem;
        font-size: 0.86rem;
        border-bottom: 1px solid #f3f4f6;
        vertical-align: middle;
    }

    .supervisor-table th {
        background: #f9fafb;
        font-weight: 600;
        color: #6b7280;
        white-space: nowrap;
    }

    .supervisor-table tbody tr:hover {
        background: #f9fafb;
    }

    .supervisor-article-title {
        font-weight: 600;
        color: #111827;
        text-decoration: none;
    }

    .supervisor-article-title:hover {
        text-decoration: underline;
        color: #FF6B35;
    }

    .supervisor-article-excerpt {
        font-size: 0.78rem;
        color: #6b7280;
    }

    .supervisor-user-cell {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .avatar-circle {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: linear-gradient(135deg, #FF6B35, #E85A2A);
        color: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.8rem;
    }

    .supervisor-user-meta {
        display: flex;
        flex-direction: column;
    }

    .supervisor-user-name {
        font-size: 0.86rem;
        font-weight: 600;
        color: #111827;
    }

    .supervisor-user-email {
        font-size: 0.78rem;
        color: #6b7280;
    }

    .supervisor-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        border-radius: 999px;
        padding: 0.2rem 0.6rem;
        font-size: 0.75rem;
        font-weight: 600;
        border: 1px solid transparent;
    }

    .supervisor-badge.article {
        background: #e0f2fe;
        color: #1d4ed8;
        border-color: #bfdbfe;
    }

    .supervisor-badge.comment {
        background: #e0f7ff;
        color: #0369a1;
        border-color: #bae6fd;
    }

    .supervisor-actions-inline .btn,
    .supervisor-actions-vertical .btn {
        font-size: 0.78rem;
        padding: 0.35rem 0.7rem;
    }

    .supervisor-actions-vertical {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
    }

    .supervisor-footer {
        margin-top: 2.5rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        justify-content: center;
    }

    .btn-outline-soft {
        border-radius: 999px;
        font-size: 0.85rem;
        padding: 0.5rem 1rem;
    }

    .supervisor-empty {
        padding: 1rem 1.25rem;
        font-size: 0.85rem;
        border-radius: 10px;
        border: 1px dashed #d1d5db;
        background: #f9fafb;
        color: #6b7280;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    @media (max-width: 992px) {
        .supervisor-grid {
            grid-template-columns: minmax(0, 1fr);
        }
    }

    @media (max-width: 768px) {
        .supervisor-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .supervisor-header-title h1 {
            font-size: 1.4rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container supervisor-layout">
    <!-- HEADER -->
    <div class="supervisor-header">
        <div class="supervisor-header-main">
            <div class="supervisor-header-title">
                <span class="icon">üõ°Ô∏è</span>
                <h1>Dashboard Superviseur</h1>
            </div>
            <div class="supervisor-header-subtitle">
                Mod√©rez les contenus signal√©s et validez les nouveaux articles.
            </div>
        </div>
        <div class="supervisor-header-actions">
            <a href="{{ path('app_home') }}" class="btn-soft-light">
                üè† Retour au site
            </a>
        </div>
    </div>

    <!-- FLASHES -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mt-2 mb-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- GRID : ARTICLES / SIGNALMENTS -->
    <div class="supervisor-grid">
        <!-- COL LEFT : ARTICLES EN ATTENTE -->
        <div class="supervisor-card">
            <div class="supervisor-card-header">
                <div>
                    <div class="supervisor-card-header-title">
                        <span class="icon">üìù</span>
                        <span>Articles en attente</span>
                    </div>
                    <div class="supervisor-card-header-subtitle">
                        Articles √† valider ou rejeter.
                    </div>
                </div>
                <div class="supervisor-kpi">
                    <div>
                        <div class="supervisor-kpi-label">Total en attente</div>
                        <div class="supervisor-kpi-title">Articles</div>
                    </div>
                    <div class="supervisor-kpi-value">{{ pendingArticles|length }}</div>
                </div>
            </div>

            <div class="supervisor-card-body">
                {% if pendingArticles is empty %}
                    <div class="supervisor-empty">
                        <span>‚ÑπÔ∏è</span>
                        <span>Aucun article en attente de validation.</span>
                    </div>
                {% else %}
                    <div class="supervisor-table-wrapper">
                        <div class="supervisor-table-header">
                            <span>Liste des articles √† valider</span>
                            <span class="count-pill">{{ pendingArticles|length }}</span>
                        </div>
                        <div class="table-responsive">
                            <table class="supervisor-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Titre</th>
                                        <th>Auteur</th>
                                        <th>Date</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for article in pendingArticles %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>
                                            <a href="{{ path('app_article_show', {id: article.id}) }}"
                                               class="supervisor-article-title"
                                               target="_blank">
                                                {{ article.title }}
                                            </a>
                                            <div class="supervisor-article-excerpt">
                                                {{ article.content|slice(0, 100) }}...
                                            </div>
                                        </td>
                                        <td>
                                            <div class="supervisor-user-cell">
                                                <div class="avatar-circle">
                                                    {{ article.author.name|slice(0, 2)|upper }}
                                                </div>
                                                <div class="supervisor-user-meta">
                                                    <span class="supervisor-user-name">{{ article.author.name }}</span>
                                                    <span class="supervisor-user-email">{{ article.author.email }}</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div style="font-size: 0.8rem;">
                                                {{ article.createdAt|date('d/m/Y') }}<br>
                                                <span class="text-muted">{{ article.createdAt|date('H:i') }}</span>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="supervisor-actions-inline btn-group" role="group">
                                                <form method="post"
                                                      action="{{ path('supervisor_moderation_validate_article', {id: article.id}) }}"
                                                      class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ article.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-success btn-sm"
                                                            onclick="return confirm('‚úÖ Valider et publier cet article ?')">
                                                        ‚úÖ Valider
                                                    </button>
                                                </form>
                                                <form method="post"
                                                      action="{{ path('supervisor_moderation_reject_article', {id: article.id}) }}"
                                                      class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ article.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-danger btn-sm"
                                                            onclick="return confirm('‚ùå Rejeter cet article ?')">
                                                        ‚ùå Rejeter
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- COL RIGHT : SIGNALMENTS -->
        <div class="supervisor-card">
            <div class="supervisor-card-header">
                <div>
                    <div class="supervisor-card-header-title">
                        <span class="icon">üö©</span>
                        <span>Signalements en attente</span>
                    </div>
                    <div class="supervisor-card-header-subtitle">
                        Articles ou commentaires signal√©s par les utilisateurs.
                    </div>
                </div>
                <div class="supervisor-kpi red">
                    <div>
                        <div class="supervisor-kpi-label">Total en attente</div>
                        <div class="supervisor-kpi-title">Signalements</div>
                    </div>
                    <div class="supervisor-kpi-value">{{ pendingReports|length }}</div>
                </div>
            </div>

            <div class="supervisor-card-body">
                {% if pendingReports is empty %}
                    <div class="supervisor-empty">
                        <span>‚ÑπÔ∏è</span>
                        <span>Aucun signalement en attente de traitement.</span>
                    </div>
                {% else %}
                    <div class="supervisor-table-wrapper">
                        <div class="supervisor-table-header">
                            <span>Signalements r√©cents</span>
                            <span class="count-pill">{{ pendingReports|length }}</span>
                        </div>
                        <div class="table-responsive">
                            <table class="supervisor-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Type</th>
                                        <th>Contenu</th>
                                        <th>Raison</th>
                                        <th>Signal√© par</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for report in pendingReports %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>
                                            {% if report.article %}
                                                <span class="supervisor-badge article">üìÑ Article</span>
                                            {% elseif report.comment %}
                                                <span class="supervisor-badge comment">üí¨ Commentaire</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if report.article %}
                                                <a href="{{ path('app_article_show', {id: report.article.id}) }}"
                                                   class="supervisor-article-title"
                                                   target="_blank">
                                                    {{ report.article.title }}
                                                </a>
                                                <div class="supervisor-article-excerpt">
                                                    Par {{ report.article.author.name }}
                                                </div>
                                            {% elseif report.comment %}
                                                <div class="supervisor-article-excerpt">
                                                    {{ report.comment.content|slice(0, 100) }}...
                                                </div>
                                                <div class="supervisor-article-excerpt">
                                                    Par {{ report.comment.author.name }}
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-warning text-dark">{{ report.reason }}</span>
                                        </td>
                                        <td>
                                            <div style="font-size: 0.86rem;">
                                                {{ report.reporter.name }}<br>
                                                <span class="text-muted" style="font-size: 0.78rem;">
                                                    {{ report.createdAt|date('d/m/Y H:i') }}
                                                </span>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="supervisor-actions-vertical">
                                                <form method="post"
                                                      action="{{ path('supervisor_moderation_approve_report', {id: report.id}) }}">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('approve_report' ~ report.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-danger btn-sm w-100"
                                                            onclick="return confirm('üóëÔ∏è Supprimer d√©finitivement ce contenu signal√© ?')">
                                                        üóëÔ∏è Supprimer
                                                    </button>
                                                </form>
                                                <form method="post"
                                                      action="{{ path('supervisor_moderation_reject_report', {id: report.id}) }}">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('reject_report' ~ report.id) }}">
                                                    <button type="submit"
                                                            class="btn btn-secondary btn-sm w-100"
                                                            onclick="return confirm('‚Ü©Ô∏è Rejeter ce signalement et conserver le contenu ?')">
                                                        ‚Ü©Ô∏è Conserver
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- NAVIGATION RAPIDE -->
    <div class="supervisor-footer">
        <a href="{{ path('app_article_index') }}" class="btn btn-outline-primary btn-outline-soft">
            üì∞ Voir tous les articles
        </a>
        <a href="{{ path('supervisor_moderation_reports') }}" class="btn btn-outline-info btn-outline-soft">
            üìä API Signalements (JSON)
        </a>
        <a href="{{ path('supervisor_moderation_pending_articles') }}" class="btn btn-outline-warning btn-outline-soft">
            üìä API Articles (JSON)
        </a>
    </div>
</div>
{% endblock %}
