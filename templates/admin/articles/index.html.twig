{% extends 'base.html.twig' %}

{% block title %}Tous les articles - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>Tous les articles</h1>
        {% if is_granted('ROLE_EDITOR') %}
            <a href="{{ path('article_new') }}" class="btn">‚úçÔ∏è Cr√©er un article</a>
        {% endif %}
    </div>

    <div class="filter-section">
        <button class="filter-btn active" data-category="all">üìö Tous</button>
        {% set categoriesTemp = [] %}
        {% for article in articles %}
            {% if article.category and article.category not in categoriesTemp %}
                {% set categoriesTemp = categoriesTemp|merge([article.category]) %}
            {% endif %}
        {% endfor %}
        {% set categories = categoriesTemp %}
        
        {% for category in categories %}
            <button class="filter-btn" data-category="{{ category.slug }}">{{ category.name }}</button>
        {% endfor %}
    </div>

    <div class="articles-grid">
        {% for article in articles %}
        <div class="article-card" data-category="{{ article.category ? article.category.slug : 'none' }}">
            {% if article.image %}
            <img src="{{ asset('uploads/' ~ article.image) }}" alt="{{ article.title }}" class="article-image">
            {% else %}
            <img src="https://source.unsplash.com/800x600/?{{ article.category ? article.category.slug : 'blog' }}" alt="{{ article.title }}" class="article-image">
            {% endif %}
            
            <div class="article-content">
                <h3 class="article-title">{{ article.title }}</h3>
                <p class="article-meta">
                    Par {{ article.authorName ?? (article.author.name ?? '') }} | {{ article.publishedAt|date('d M Y') }}
                    {% if article.category %} | {{ article.category.name }}{% endif %}
                </p>
                <p style="color: var(--gray-600); line-height: 1.6;">{{ article.content|striptags|slice(0, 130) }}...</p>
                
                <div class="article-actions">
                    <a href="{{ path('article_show', {id: article.id}) }}" class="btn btn-sm">Lire ‚Üí</a>
                    {% if is_granted('ROLE_EDITOR') and app.user == article.author %}
                    <a href="{{ path('article_edit', {id: article.id}) }}" class="btn btn-secondary btn-sm">‚úèÔ∏è Modifier</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<script>
document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        const category = this.dataset.category;
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const cards = document.querySelectorAll('.article-card');
        cards.forEach((card, index) => {
            if (category === 'all' || card.dataset.category === category) {
                setTimeout(() => {
                    card.style.display = 'block';
                    card.style.animation = 'fadeInUp 0.5s ease forwards';
                }, index * 50);
            } else {
                card.style.display = 'none';
            }
        });
    });
});
</script>
{% endblock %}
