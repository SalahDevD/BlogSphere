{% extends 'base.html.twig' %}

{% block title %}Modifier utilisateur - Admin - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
<div class="edit-container">
    <div class="container">
        <a href="{{ path('admin_users_index') }}" class="back-btn">‚Üê Retour aux utilisateurs</a>

        <div class="form-card">
            <h1 class="form-title">Modifier les r√¥les</h1>

            <div class="user-info">
                <div class="user-info-row">
                    <span class="user-info-label">Nom:</span>
                    <span class="user-info-value">{{ user.name }}</span>
                </div>
                <div class="user-info-row">
                    <span class="user-info-label">Email:</span>
                    <span class="user-info-value">{{ user.email }}</span>
                </div>
            </div>

            <form method="POST">
                <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ user.id) }}">
                <div class="form-group">
                    <label style="font-weight: 700; color: #111827; margin-bottom: 1rem; display: block; font-size: 1.1rem;">Assigner les r√¥les</label>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem;">
                        {% set roleLabels = {
                            'ROLE_USER': 'üë§ Utilisateur',
                            'ROLE_EDITOR': '‚úèÔ∏è √âditeur',
                            'ROLE_SUPERVISOR': 'üëÄ Superviseur',
                            'ROLE_ADMIN': 'üîê Administrateur'
                        } %}
                        {% for role in allRoles ?? [] %}
                            <div style="padding: 1rem; border: 2px solid #e5e7eb; border-radius: 8px; cursor: pointer; transition: all 0.3s; background: white;" id="role_box_{{ role }}" onclick="toggleRole('role_{{ role }}', 'role_box_{{ role }}');">
                                <input 
                                    type="checkbox" 
                                    id="role_{{ role }}" 
                                    name="roles[]" 
                                    value="{{ role }}"
                                    {% if role in user.roles %}checked{% endif %}
                                    style="cursor: pointer; margin-right: 0.5rem;"
                                    onchange="updateRoleBox('role_{{ role }}', 'role_box_{{ role }}')"
                                >
                                <label for="role_{{ role }}" style="cursor: pointer; font-weight: 600; font-size: 1rem;">
                                    {{ roleLabels[role] ?? role|replace('ROLE_', '') }}
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                    <small style="color: #6b5563; display: block; margin-bottom: 1rem;">üí° S√©lectionnez un ou plusieurs r√¥les pour cet utilisateur</small>
                </div>

                <div class="action-buttons" style="display: flex; gap: 1rem;">
                    <a href="{{ path('admin_users_index') }}" class="btn btn-secondary" style="flex: 1; padding: 0.75rem; background: #e5e7eb; color: #374151; text-decoration: none; border: none; border-radius: 8px; cursor: pointer; font-weight: 600; text-align: center; transition: all 0.3s;">Annuler</a>
                    <button type="submit" class="btn btn-primary" style="flex: 1; padding: 0.75rem; background: linear-gradient(135deg, #FF6B35, #E85A2A); color: white; border: none; border-radius: 8px; cursor: pointer; font-weight: 600; transition: all 0.3s;">üíæ Enregistrer les modifications</button>
                </div>
            </form>

            <script>
                function toggleRole(checkboxId, boxId) {
                    const checkbox = document.getElementById(checkboxId);
                    const box = document.getElementById(boxId);
                    checkbox.checked = !checkbox.checked;
                    updateRoleBox(checkboxId, boxId);
                }

                function updateRoleBox(checkboxId, boxId) {
                    const checkbox = document.getElementById(checkboxId);
                    const box = document.getElementById(boxId);
                    if (checkbox.checked) {
                        box.style.borderColor = '#FF6B35';
                        box.style.backgroundColor = '#FFF5F0';
                    } else {
                        box.style.borderColor = '#e5e7eb';
                        box.style.backgroundColor = 'white';
                    }
                }

                // Initialize on page load
                window.addEventListener('DOMContentLoaded', function() {
                    {% for role in allRoles ?? [] %}
                        updateRoleBox('role_{{ role }}', 'role_box_{{ role }}');
                    {% endfor %}
                });
            </script>
        </div>
    </div>
</div>
{% endblock %}