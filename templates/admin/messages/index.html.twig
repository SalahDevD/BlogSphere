{% extends 'base.html.twig' %}

{% block title %}Messages des Clients - Admin{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
<style>
    :root {
        --color-primary: #131010;
        --color-secondary: #543A14;
        --color-accent: #F0BB78;
        --color-light: #FFF0DC;
        --color-primary-light: #2a1f1f;
        --color-secondary-light: #6b4b1a;
        --color-accent-dark: #d9a560;
        --color-light-dark: #f5e5c8;
    }

    .messages-page {
        background: linear-gradient(135deg, var(--color-light) 0%, #fff 100%);
        min-height: 100vh;
        padding: 3rem 0;
    }

    .page-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .page-header {
        display: flex;
        gap: 2rem;
        margin-bottom: 2.5rem;
        align-items: center;
        flex-wrap: wrap;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .conversation-count {
        background: var(--color-light-dark);
        color: var(--color-secondary);
        padding: 0.5rem 1.25rem;
        border-radius: 20px;
        font-weight: 600;
        border: 2px solid var(--color-accent);
    }

    .messages-grid {
        display: grid;
        grid-template-columns: 380px 1fr;
        gap: 2rem;
    }

    .conversations-sidebar {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(19, 16, 16, 0.08);
        overflow: hidden;
        height: fit-content;
        border: 1px solid var(--color-light-dark);
    }

    .sidebar-header {
        padding: 1.5rem;
        border-bottom: 2px solid var(--color-light-dark);
        background: linear-gradient(135deg, var(--color-secondary), var(--color-secondary-light));
        color: var(--color-light);
    }

    .sidebar-title {
        font-size: 1.1rem;
        font-weight: 700;
        color:white;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .conversations-list {
        max-height: 650px;
        overflow-y: auto;
    }

    .conversations-list::-webkit-scrollbar {
        width: 6px;
    }

    .conversations-list::-webkit-scrollbar-track {
        background: var(--color-light);
    }

    .conversations-list::-webkit-scrollbar-thumb {
        background: var(--color-accent);
        border-radius: 3px;
    }

    .conversation-item {
        padding: 1.25rem;
        border-bottom: 1px solid var(--color-light-dark);
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
    }

    .conversation-item:hover {
        background: var(--color-light);
    }

    .conversation-item.active {
        background: var(--color-light-dark);
        border-left: 4px solid var(--color-secondary);
    }

    .conversation-header {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        align-items: center;
    }

    .user-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--color-accent), var(--color-accent-dark));
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-primary);
        font-weight: 700;
        font-size: 1.1rem;
        flex-shrink: 0;
        border: 2px solid var(--color-secondary);
    }

    .user-details {
        flex: 1;
        min-width: 0;
    }

    .user-name {
        margin: 0;
        font-weight: 600;
        color: var(--color-primary);
        font-size: 0.95rem;
    }

    .user-email {
        margin: 0;
        font-size: 0.8rem;
        color: var(--color-secondary-light);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .unread-badge {
        background: var(--color-secondary);
        color: var(--color-light);
        padding: 0.25rem 0.6rem;
        border-radius: 50%;
        font-size: 0.75rem;
        font-weight: 700;
        min-width: 26px;
        text-align: center;
        flex-shrink: 0;
    }

    .last-message {
        margin: 0;
        font-size: 0.9rem;
        color: var(--color-secondary-light);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        padding-left: 56px;
    }

    .message-time {
        margin: 0.5rem 0 0;
        font-size: 0.75rem;
        color: var(--color-accent-dark);
        padding-left: 56px;
        font-weight: 500;
    }

    .conversation-main {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(19, 16, 16, 0.08);
        display: flex;
        flex-direction: column;
        height: 650px;
        border: 1px solid var(--color-light-dark);
    }

    .conversation-title-bar {
        padding: 1.5rem;
        border-bottom: 2px solid var(--color-light-dark);
        background: linear-gradient(135deg, var(--color-secondary), var(--color-secondary-light));
        color: var(--color-light);
        border-radius: 16px 16px 0 0;
    }

    .conversation-title {
        color:white;
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
    }

    .messages-area {
        flex: 1;
        padding: 1.5rem;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: linear-gradient(to bottom, var(--color-light) 0%, white 100%);
    }

    .messages-area::-webkit-scrollbar {
        width: 8px;
    }

    .messages-area::-webkit-scrollbar-track {
        background: var(--color-light);
    }

    .messages-area::-webkit-scrollbar-thumb {
        background: var(--color-accent);
        border-radius: 4px;
    }

    .message-wrapper {
        display: flex;
        gap: 0.75rem;
    }

    .message-wrapper.from-client {
        justify-content: flex-end;
    }

    .message-wrapper.from-admin {
        justify-content: flex-start;
    }

    .message-bubble {
        padding: 0.875rem 1.25rem;
        border-radius: 16px;
        max-width: 70%;
        word-wrap: break-word;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .message-bubble.from-client {
        background: linear-gradient(135deg, var(--color-secondary), var(--color-secondary-light));
        color: var(--color-light);
        border-bottom-right-radius: 4px;
    }

    .message-bubble.from-admin {
        background: white;
        border: 2px solid var(--color-accent);
        color: var(--color-primary);
        border-bottom-left-radius: 4px;
    }

    .message-image {
        max-width: 100%;
        max-height: 300px;
        border-radius: 12px;
        margin-bottom: 0.75rem;
        display: block;
    }

    .message-content {
        font-size: 0.95rem;
        line-height: 1.5;
        margin: 0;
    }

    .message-meta {
        font-size: 0.75rem;
        opacity: 0.8;
        margin-top: 0.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .reply-form-container {
        padding: 1.25rem;
        border-top: 2px solid var(--color-light-dark);
        background: white;
        border-radius: 0 0 16px 16px;
        display: none;
    }

    .reply-form-container.active {
        display: block;
    }

    .reply-form {
        display: flex;
        gap: 0.75rem;
        align-items: center;
    }

    .reply-input {
        flex: 1;
        padding: 0.875rem 1.25rem;
        border: 2px solid var(--color-light-dark);
        border-radius: 12px;
        font-family: inherit;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: var(--color-light);
    }

    .reply-input:focus {
        outline: none;
        border-color: var(--color-accent);
        background: white;
        box-shadow: 0 0 0 4px rgba(240, 187, 120, 0.1);
    }

    .reply-button {
        padding: 0.875rem 2rem;
        background: linear-gradient(135deg, var(--color-secondary), var(--color-secondary-light));
        color: var(--color-light);
        border: none;
        border-radius: 12px;
        cursor: pointer;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(84, 58, 20, 0.2);
    }

    .reply-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(84, 58, 20, 0.3);
        background: linear-gradient(135deg, var(--color-secondary-light), var(--color-secondary));
    }

    .reply-button:active {
        transform: translateY(0);
    }

    .empty-state {
        background: white;
        padding: 4rem 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(19, 16, 16, 0.08);
        border: 2px dashed var(--color-accent);
    }

    .empty-icon {
        font-size: 5rem;
        margin-bottom: 1.5rem;
        filter: grayscale(30%);
    }

    .empty-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--color-primary);
        margin-bottom: 0.75rem;
    }

    .empty-description {
        color: var(--color-secondary-light);
        font-size: 1.05rem;
    }

    @media (max-width: 1024px) {
        .messages-grid {
            grid-template-columns: 1fr;
        }

        .conversations-sidebar {
            max-height: 400px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="messages-page">
    <div class="page-container">
        <div class="page-header">
            <h1 class="page-title">Messages des Clients</h1>
            {% if conversations is defined and conversations|length > 0 %}
                <span class="conversation-count">{{ conversations|length }} conversation(s)</span>
            {% endif %}
        </div>

        {% if conversations is defined and conversations|length > 0 %}
            <div class="messages-grid">
                {# Sidebar: Liste des conversations #}
                <div class="conversations-sidebar">
                    <div class="sidebar-header">
                        <h2 class="sidebar-title">üí¨ Conversations</h2>
                    </div>

                    <div class="conversations-list">
                        {% for senderId, conversation in conversations %}
                            <div class="conversation-item" data-client-id="{{ senderId }}" onclick="selectConversation({{ senderId }})">
                                <div class="conversation-header">
                                    <div class="user-avatar">
                                        {{ conversation.sender.name|slice(0, 1)|upper }}
                                    </div>
                                    <div class="user-details">
                                        <p class="user-name">{{ conversation.sender.name }}</p>
                                        <p class="user-email">{{ conversation.sender.email }}</p>
                                    </div>
                                    {% if conversation.unreadCount > 0 %}
                                        <span class="unread-badge">{{ conversation.unreadCount }}</span>
                                    {% endif %}
                                </div>
                                <p class="last-message">{{ conversation.lastMessage.content|striptags|slice(0, 55) }}...</p>
                                <p class="message-time">{{ conversation.lastMessage.createdAt|date('d/m/Y H:i') }}</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {# Main: Conversation actuelle #}
                <div class="conversation-main" id="conversationContainer">
                    <div class="conversation-title-bar">
                        <h2 class="conversation-title" id="conversationTitle">S√©lectionnez une conversation</h2>
                    </div>

                    <div class="messages-area" id="messagesContainer">
                        <!-- Messages will be loaded here -->
                    </div>

                    <div class="reply-form-container" id="replyForm">
                        <form class="reply-form" onsubmit="sendReply(event)">
                            <input type="text" id="replyInput" class="reply-input" placeholder="Tapez votre r√©ponse..." required>
                            <button type="submit" class="reply-button">‚úâÔ∏è Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-icon">üì≠</div>
                <h2 class="empty-title">Aucun message</h2>
                <p class="empty-description">Les clients n'ont pas encore envoy√© de messages via le chat support.</p>
            </div>
        {% endif %}
    </div>
</div>

<script>
    let selectedClientId = null;

    function selectConversation(clientId) {
        selectedClientId = clientId;
        
        // Update active state
        document.querySelectorAll('.conversation-item').forEach(item => {
            if (item.getAttribute('data-client-id') == clientId) {
                item.classList.add('active');
            } else {
                item.classList.remove('active');
            }
        });

        // Get client name
        const activeItem = document.querySelector(`.conversation-item[data-client-id="${clientId}"]`);
        const clientName = activeItem.querySelector('.user-name').textContent;
        
        document.getElementById('conversationTitle').textContent = `üí¨ Conversation avec ${clientName}`;
        document.getElementById('replyForm').classList.add('active');

        // Load messages
        loadMessages(clientId);
    }

    function loadMessages(clientId) {
        fetch(`/admin/messages/api/messages/${clientId}`)
            .then(response => response.json())
            .then(messages => {
                const container = document.getElementById('messagesContainer');
                container.innerHTML = '';

                if (messages.length === 0) {
                    container.innerHTML = '<p style="color: var(--color-secondary-light); text-align: center; margin: auto;">Aucun message pour cette conversation.</p>';
                    return;
                }

                messages.forEach(message => {
                    const isFromAdmin = message.isFromAdmin;
                    const messageWrapper = document.createElement('div');
                    messageWrapper.className = `message-wrapper ${isFromAdmin ? 'from-admin' : 'from-client'}`;
                    
                    const bubble = document.createElement('div');
                    bubble.className = `message-bubble ${isFromAdmin ? 'from-admin' : 'from-client'}`;
                    
                    let imageHtml = '';
                    if (message.image) {
                        imageHtml = `<img src="/uploads/support/${message.image}" alt="Image" class="message-image">`;
                    }
                    
                    bubble.innerHTML = `
                        ${imageHtml}
                        <p class="message-content">${escapeHtml(message.content)}</p>
                        <div class="message-meta">
                            <span>${message.createdAtTime}</span>
                            ${isFromAdmin ? '<span>Admin</span>' : ''}
                        </div>
                    `;
                    
                    messageWrapper.appendChild(bubble);
                    container.appendChild(messageWrapper);
                });

                container.scrollTop = container.scrollHeight;
            })
            .catch(error => console.error('Error:', error));
    }

    function sendReply(event) {
        event.preventDefault();
        const input = document.getElementById('replyInput');
        const content = input.value.trim();

        if (!content || !selectedClientId) return;

        fetch(`/admin/messages/reply/${selectedClientId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({ content })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                input.value = '';
                loadMessages(selectedClientId);
            } else {
                alert('Erreur lors de l\'envoi de la r√©ponse');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Erreur lors de l\'envoi de la r√©ponse');
        });
    }

    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Load first conversation on page load
    window.addEventListener('load', () => {
        const firstItem = document.querySelector('.conversation-item');
        if (firstItem) {
            firstItem.click();
        }
    });

    // Auto-refresh every 3 seconds
    setInterval(() => {
        if (selectedClientId) {
            loadMessages(selectedClientId);
        }
    }, 3000);
</script>

{% endblock %}
