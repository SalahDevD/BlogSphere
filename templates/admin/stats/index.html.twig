{% extends 'base.html.twig' %}

{% block title %}Statistiques - Admin - BlogSphere{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --orange-primary: #FF6B35;
        --orange-dark: #E85A2A;
        --gray-900: #111827;
        --gray-700: #374151;
        --gray-600: #4b5563;
        --gray-200: #e5e7eb;
        --gray-50: #f9fafb;
        --white: #ffffff;
    }

    .stats-container {
        background: var(--gray-50);
        min-height: 100vh;
        padding: 4rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .header {
        margin-bottom: 3rem;
    }

    .header h1 {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--gray-900);
        margin-bottom: 0.5rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: var(--white);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: all 0.3s;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
    }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.85rem;
        color: var(--gray-600);
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 900;
        color: var(--gray-900);
    }

    .stat-subtitle {
        font-size: 0.85rem;
        color: var(--gray-600);
        margin-top: 0.5rem;
    }

    .charts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .chart-card {
        background: var(--white);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .chart-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: 1.5rem;
    }

    .chart-placeholder {
        height: 300px;
        background: linear-gradient(135deg, var(--orange-light) 0%, var(--gray-200) 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        color: var(--gray-600);
    }

    .bar-chart {
        display: flex;
        align-items: flex-end;
        gap: 1rem;
        height: 250px;
        padding: 1rem 0;
    }

    .bar {
        flex: 1;
        background: linear-gradient(135deg, var(--orange-primary), var(--orange-dark));
        border-radius: 8px 8px 0 0;
        position: relative;
        min-height: 10px;
    }

    .bar-label {
        position: absolute;
        bottom: -30px;
        left: 0;
        right: 0;
        text-align: center;
        font-size: 0.75rem;
        color: var(--gray-600);
        white-space: nowrap;
    }

    .bar-value {
        position: absolute;
        top: -30px;
        left: 0;
        right: 0;
        text-align: center;
        font-weight: 700;
        color: var(--gray-900);
        font-size: 0.85rem;
    }

    .articles-list {
        background: var(--white);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .articles-list h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--gray-900);
        margin-bottom: 1rem;
    }

    .article-row {
        padding: 1rem;
        border-bottom: 1px solid var(--gray-200);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .article-row:last-child {
        border-bottom: none;
    }

    .article-name {
        font-weight: 600;
        color: var(--gray-900);
    }

    .article-likes {
        background: var(--orange-light);
        color: var(--orange-primary);
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .charts-grid {
            grid-template-columns: 1fr;
        }

        .chart-placeholder {
            height: 200px;
        }

        .bar-chart {
            height: 150px;
        }

        .container {
            padding: 0 1rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="stats-container">
    <div class="container">
        <div class="header">
            <h1>üìä Statistiques</h1>
            <p style="color: var(--gray-600);">Tableau de bord des donn√©es de votre plateforme</p>
        </div>

        {# Stats Cards #}
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üìù</div>
                <div class="stat-label">Articles totaux</div>
                <div class="stat-value">{{ totalArticles }}</div>
                <div class="stat-subtitle">{{ publishedArticles }} publi√©s</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-label">Articles valid√©s</div>
                <div class="stat-value">{{ publishedArticles }}</div>
                <div class="stat-subtitle">{{ pendingArticles }} en attente</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üí¨</div>
                <div class="stat-label">Commentaires</div>
                <div class="stat-value">{{ totalComments }}</div>
                <div class="stat-subtitle">Tous les commentaires</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üë•</div>
                <div class="stat-label">Utilisateurs</div>
                <div class="stat-value">{{ totalUsers }}</div>
                <div class="stat-subtitle">Membres actifs</div>
            </div>
        </div>

        {# Charts #}
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-title">üìà Articles par jour (30 derniers jours)</div>
                <div class="bar-chart">
                    {% set maxValue = articlesPerDay|values|max %}
                    {% for day, count in articlesPerDay %}
                        <div class="bar" style="height: {% if maxValue > 0 %}{{ (count / maxValue * 100)|round }}{% else %}10{% endif %}%;">
                            <div class="bar-value">{{ count }}</div>
                            <div class="bar-label">{{ day|date('d/m') }}</div>
                        </div>
                    {% else %}
                        <div class="chart-placeholder">Aucune donn√©e disponible</div>
                    {% endfor %}
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-title">üìÇ Articles par cat√©gorie</div>
                <div style="padding: 1rem 0;">
                    {% for category, count in articlesByCategory %}
                        <div style="margin-bottom: 1rem;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="font-weight: 600; color: var(--gray-900);">{{ category }}</span>
                                <span style="color: var(--orange-primary); font-weight: 700;">{{ count }}</span>
                            </div>
                            <div style="background: var(--gray-200); height: 8px; border-radius: 4px; overflow: hidden;">
                                {% set maxCount = articlesByCategory|values|max %}
                                <div style="background: linear-gradient(135deg, var(--orange-primary), var(--orange-dark)); height: 100%; width: {{ (count / maxCount * 100)|round }}%;"></div>
                            </div>
                        </div>
                    {% else %}
                        <div style="text-align: center; padding: 2rem; color: var(--gray-600);">
                            Aucune cat√©gorie
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
