{% extends 'base.html.twig' %}

{% block title %}Statistiques - Admin - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
<div class="stats-container">
    <div class="container">
        <div class="header">
            <h1>üìä Statistiques</h1>
            <p style="color: var(--gray-600);">Tableau de bord des donn√©es de votre plateforme</p>
        </div>

        {# Stats Cards #}
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">üìù</div>
                <div class="stat-label">Articles totaux</div>
                <div class="stat-value">{{ totalArticles }}</div>
                <div class="stat-subtitle">{{ publishedArticles }} publi√©s</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">‚úÖ</div>
                <div class="stat-label">Articles valid√©s</div>
                <div class="stat-value">{{ publishedArticles }}</div>
                <div class="stat-subtitle">{{ pendingArticles }} en attente</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üí¨</div>
                <div class="stat-label">Commentaires</div>
                <div class="stat-value">{{ totalComments }}</div>
                <div class="stat-subtitle">Tous les commentaires</div>
            </div>

            <div class="stat-card">
                <div class="stat-icon">üë•</div>
                <div class="stat-label">Utilisateurs</div>
                <div class="stat-value">{{ totalUsers }}</div>
                <div class="stat-subtitle">Membres actifs</div>
            </div>
        </div>

        {# Charts #}
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-title">üìà Articles par jour (30 derniers jours)</div>
                <div class="bar-chart">
                    {% set maxValue = articlesPerDay|values|max %}
                    {% for day, count in articlesPerDay %}
                        <div class="bar" style="height: {% if maxValue > 0 %}{{ (count / maxValue * 100)|round }}{% else %}10{% endif %}%;">
                            <div class="bar-value">{{ count }}</div>
                            <div class="bar-label">{{ day|date('d/m') }}</div>
                        </div>
                    {% else %}
                        <div class="chart-placeholder">Aucune donn√©e disponible</div>
                    {% endfor %}
                </div>
            </div>

            <div class="chart-card">
                <div class="chart-title">üìÇ Articles par cat√©gorie</div>
                <div style="padding: 1rem 0;">
                    {% for category, count in articlesByCategory %}
                        <div style="margin-bottom: 1rem;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                                <span style="font-weight: 600; color: var(--gray-900);">{{ category }}</span>
                                <span style="color: var(--orange-primary); font-weight: 700;">{{ count }}</span>
                            </div>
                            <div style="background: var(--gray-200); height: 8px; border-radius: 4px; overflow: hidden;">
                                {% set maxCount = articlesByCategory|values|max %}
                                <div style="background: linear-gradient(135deg, var(--orange-primary), var(--orange-dark)); height: 100%; width: {{ (count / maxCount * 100)|round }}%;"></div>
                            </div>
                        </div>
                    {% else %}
                        <div style="text-align: center; padding: 2rem; color: var(--gray-600);">
                            Aucune cat√©gorie
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
