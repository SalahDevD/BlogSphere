{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin - BlogSphere{% endblock %}

{% block stylesheets %}
<style>
    .admin-container {
        padding: 2rem 0 3rem;
    }
    .admin-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding: 2rem;
        background: linear-gradient(135deg, var(--orange-primary) 0%, var(--orange-dark) 100%);
        border-radius: 16px;
        color: var(--white);
        box-shadow: 0 8px 25px rgba(255, 107, 53, 0.25);
        animation: fadeInUp 0.6s ease;
        position: relative;
        overflow: hidden;
    }
    
    .admin-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 250px;
        height: 250px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }
    
    .admin-header h1 {
        font-size: 2rem;
        font-weight: 900;
        margin-bottom: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .admin-header p {
        font-size: 1rem;
        opacity: 0.95;
        position: relative;
        z-index: 1;
    }
    
    .admin-nav {
        display: flex;
        gap: 1rem;
        position: relative;
        z-index: 1;
    }
    
    .admin-nav .btn {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .admin-nav .btn:hover {
        background: var(--white);
        color: var(--orange-primary);
    }
    
    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }
    
    .stat-card {
        background: var(--white);
        padding: 1.75rem;
        border-radius: 14px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--gray-200);
        transition: all 0.3s ease;
        animation: fadeInUp 0.8s ease;
        position: relative;
        overflow: hidden;
    }
    
    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--orange-primary);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }
    
    .stat-card:hover::before {
        transform: scaleY(1);
    }
    
    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        border-color: var(--orange-primary);
    }
    
    .stat-icon {
        width: 50px;
        height: 50px;
        background: var(--orange-light);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .stat-value {
        font-size: 2.2rem;
        font-weight: 900;
        color: var(--gray-900);
        margin-bottom: 0.5rem;
        line-height: 1;
    }
    
    .stat-label {
        color: var(--gray-600);
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .info-section {
        background: var(--white);
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--gray-200);
        margin-bottom: 1.5rem;
        animation: fadeInUp 1s ease;
    }
    
    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--gray-900);
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.25rem;
    }
    
    .info-item {
        padding: 1.25rem;
        background: var(--gray-50);
        border-radius: 10px;
        border: 1px solid var(--gray-200);
        transition: all 0.3s ease;
    }
    
    .info-item:hover {
        border-color: var(--orange-primary);
        background: var(--white);
    }
    
    .info-item strong {
        color: var(--gray-900);
        font-weight: 700;
        font-size: 0.9rem;
        display: block;
        margin-bottom: 0.5rem;
    }
    
    .info-item p {
        color: var(--gray-600);
        margin: 0;
        font-size: 1.1rem;
        font-weight: 700;
    }
    
    .info-item a {
        color: var(--orange-primary);
        text-decoration: none;
        transition: color 0.3s;
    }
    
    .info-item a:hover {
        color: var(--orange-dark);
        text-decoration: underline;
    }
    
    @media (max-width: 768px) {
        .admin-header {
            flex-direction: column;
            text-align: center;
            gap: 1.25rem;
            padding: 1.5rem;
        }
        
        .admin-header h1 {
            font-size: 1.75rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .info-section {
            padding: 1.5rem;
        }
        
        .section-title {
            font-size: 1.3rem;
        }
        
        .info-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }
    
    @media (max-width: 480px) {
        .admin-container {
            padding: 1rem 0 2rem;
        }
        
        .admin-header {
            margin-bottom: 1.5rem;
        }
        
        .stat-card {
            padding: 1.5rem;
        }
        
        .stat-value {
            font-size: 2rem;
        }
    }
</style>
{% endblock %}

