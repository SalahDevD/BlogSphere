{% extends 'base.html.twig' %}

{% block title %}Mes images - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
<div class="profile-images-container">
    <div class="container">
        <div class="header">
            <h1>Mes images</h1>
            <p>G√©rez les images de votre profil</p>
        </div>

        <div class="upload-section">
            <h2 class="upload-title">T√©l√©charger une nouvelle image</h2>
            <div class="upload-area" id="uploadArea">
                <div class="upload-icon">üì∏</div>
                <p class="upload-text">Cliquez ou glissez une image ici</p>
                <p class="upload-subtext">PNG, JPG ou WebP. Max 5MB.</p>
            </div>
            <input type="file" id="imageInput" accept="image/*">
        </div>

        {% if images|length > 0 %}
            <div class="images-grid">
                {% for image in images %}
                    <div class="image-card" data-image-id="{{ image.id }}">
                        <div class="image-wrapper">
                            <img src="{{ asset('uploads/profile/' ~ image.filename) }}" alt="Profile image">
                        </div>
                        <div class="image-actions">
                            {% if image.isProfile %}
                                <div class="image-badge">Image du profil</div>
                            {% endif %}
                            <div class="action-buttons">
                                {% if not image.isProfile %}
                                    <button class="btn btn-primary" onclick="setProfileImage({{ image.id }})">
                                        Utiliser
                                    </button>
                                {% endif %}
                                <button class="btn btn-danger" onclick="deleteImage({{ image.id }})">
                                    Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-emoji">üñºÔ∏è</div>
                <h2>Aucune image</h2>
                <p>T√©l√©chargez votre premi√®re image de profil</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    const uploadArea = document.getElementById('uploadArea');
    const imageInput = document.getElementById('imageInput');

    uploadArea.addEventListener('click', () => imageInput.click());

    uploadArea.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadArea.classList.add('dragover');
    });

    uploadArea.addEventListener('dragleave', () => {
        uploadArea.classList.remove('dragover');
    });

    uploadArea.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadArea.classList.remove('dragover');
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            imageInput.files = files;
            uploadFile();
        }
    });

    imageInput.addEventListener('change', uploadFile);

    function uploadFile() {
        const file = imageInput.files[0];
        if (!file) return;

        const formData = new FormData();
        formData.append('image', file);

        fetch('{{ path('profile_images_upload') }}', {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erreur : ' + (data.error || 'Impossible de t√©l√©charger l\'image'));
            }
        })
        .catch(err => console.error('Error:', err));
    }

    function setProfileImage(imageId) {
        fetch(`{{ path('profile_images_set_profile', {id: 0}) }}`.replace('/0/', '/' + imageId + '/'), {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erreur : ' + (data.error || 'Impossible de d√©finir l\'image du profil'));
            }
        });
    }

    function deleteImage(imageId) {
        if (confirm('√ätes-vous s√ªr de vouloir supprimer cette image ?')) {
            fetch(`{{ path('profile_images_delete', {id: 0}) }}`.replace('/0/', '/' + imageId + '/'), {
                method: 'DELETE',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Erreur : ' + (data.error || 'Impossible de supprimer l\'image'));
                }
            });
        }
    }
</script>
{% endblock %}
