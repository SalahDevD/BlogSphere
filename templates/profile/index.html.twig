{% extends 'base.html.twig' %}

{% block title %}Mon Profil - BlogSphere{% endblock %}

{% block stylesheets %}
<style>
    .profile-container {
        max-width: 1200px;
        margin: 2rem auto 4rem;
        padding: 0 1.5rem;
    }

    .profile-header {
        background: var(--white);
        border-radius: 20px;
        padding: 3rem;
        margin-bottom: 3rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid var(--gray-200);
    }

    .profile-info {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, var(--orange-primary), var(--orange-dark));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        font-weight: 700;
        box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
    }

    .profile-details {
        flex: 1;
    }

    .profile-name {
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--gray-900);
    }

    .profile-email {
        color: var(--gray-600);
        margin-bottom: 1rem;
    }

    .profile-bio {
        color: var(--gray-700);
        line-height: 1.6;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--gray-200);
    }

    .profile-stats {
        display: flex;
        gap: 2rem;
        padding: 1.5rem;
        background: var(--gray-50);
        border-radius: 12px;
    }

    .stat-item {
        text-align: center;
        flex: 1;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 800;
        color: var(--orange-primary);
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--gray-600);
        margin-top: 0.25rem;
    }

    .articles-section {
        background: var(--white);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid var(--gray-200);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--gray-900);
    }

    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    .article-card {
        background: var(--white);
        border: 2px solid var(--gray-200);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .article-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        border-color: var(--orange-primary);
    }

    .article-card-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .article-card-content {
        padding: 1.5rem;
    }

    .article-card-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: var(--gray-900);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .article-card-excerpt {
        color: var(--gray-600);
        font-size: 0.95rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .article-card-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.875rem;
        color: var(--gray-500);
        margin-bottom: 1rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .article-card-actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .btn-small {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
        border: 2px solid transparent;
        background: var(--gray-100);
        color: var(--gray-800);
    }

    .btn-small:hover {
        background: var(--gray-200);
    }

    .btn-view {
        border-color: var(--gray-300);
    }

    .btn-edit {
        background: var(--orange-light);
        color: var(--orange-dark);
        border-color: var(--orange-primary);
    }

    .btn-edit:hover {
        background: var(--orange-primary);
        color: white;
    }

    .btn-delete {
        background: #fee2e2;
        color: #991b1b;
        border-color: #ef4444;
    }

    .btn-delete:hover {
        background: #ef4444;
        color: white;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-approved {
        background: #d1fae5;
        color: #065f46;
    }

    .status-pending {
        background: #fef3c7;
        color: #92400e;
    }

    .status-rejected {
        background: #fee2e2;
        color: #991b1b;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: var(--gray-500);
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    @media (max-width: 768px) {
        .profile-info {
            flex-direction: column;
            text-align: center;
        }

        .profile-stats {
            flex-direction: column;
            gap: 1rem;
        }

        .articles-grid {
            grid-template-columns: 1fr;
        }

        .section-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .section-header .btn {
            width: 100%;
            text-align: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="profile-header">
        <div class="profile-info">
            <div class="profile-avatar">
                {{ user.name|first|upper }}
            </div>
            <div class="profile-details">
                <h1 class="profile-name">{{ user.name }}</h1>
                <p class="profile-email">üìß {{ user.email }}</p>
                <a href="{{ path('user_profile_edit') }}" class="btn btn-outline">‚úèÔ∏è Modifier mon profil</a>
                {% if user.bio %}
                    <p class="profile-bio">{{ user.bio }}</p>
                {% endif %}
            </div>
        </div>

        <div class="profile-stats">
            <div class="stat-item">
                <div class="stat-value">{{ articles|length }}</div>
                <div class="stat-label">Articles total</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">
                    {% set approved_count = 0 %}
                    {% for article in articles %}
                        {% if article.validationStatus == 'approved' %}
                            {% set approved_count = approved_count + 1 %}
                        {% endif %}
                    {% endfor %}
                    {{ approved_count }}
                </div>
                <div class="stat-label">Articles valid√©s</div>
            </div>
            <div class="stat-item">
                <div class="stat-value">
                    {% set pending_count = 0 %}
                    {% for article in articles %}
                        {% if article.validationStatus == 'pending' %}
                            {% set pending_count = pending_count + 1 %}
                        {% endif %}
                    {% endfor %}
                    {{ pending_count }}
                </div>
                <div class="stat-label">En attente</div>
            </div>
        </div>
    </div>

    <div class="articles-section">
        <div class="section-header">
            <h2 class="section-title">üìö Mes Articles</h2>
            <a href="{{ path('app_article_new') }}" class="btn">‚ûï Nouvel article</a>
        </div>

        {% if articles|length > 0 %}
            <div class="articles-grid">
                {% for article in articles %}
                    <div class="article-card">
                        {% if article.image %}
                            <img src="{{ asset('uploads/' ~ article.image) }}" alt="{{ article.title }}" class="article-card-image">
                        {% else %}
                            <div class="article-card-image" style="background: linear-gradient(135deg, var(--orange-primary), var(--orange-dark)); display: flex; align-items: center; justify-content: center; color: white; font-size: 3rem;">
                                üìÑ
                            </div>
                        {% endif %}

                        <div class="article-card-content">
                            <h3 class="article-card-title">{{ article.title }}</h3>
                            
                            <p class="article-card-excerpt">
                                {{ article.content|slice(0, 120) }}...
                            </p>

                            <div class="article-card-meta">
                                <span>üìÖ {{ article.createdAt|date('d/m/Y') }}</span>
                                <span>
                                    {% if article.validationStatus == 'approved' %}
                                        <span class="status-badge status-approved">‚úÖ Valid√©</span>
                                    {% elseif article.validationStatus == 'pending' %}
                                        <span class="status-badge status-pending">‚è≥ En attente</span>
                                    {% else %}
                                        <span class="status-badge status-rejected">‚ùå Rejet√©</span>
                                    {% endif %}
                                </span>
                            </div>

                            <div class="article-card-actions">
                                <a href="{{ path('app_article_show', {id: article.id}) }}" class="btn-small btn-view">
                                    üëÅÔ∏è Voir
                                </a>
                                <a href="{{ path('app_article_edit', {id: article.id}) }}" class="btn-small btn-edit">
                                    ‚úèÔ∏è Modifier
                                </a>
                                <form method="POST" action="{{ path('app_article_delete', {id: article.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_article_' ~ article.id) }}">
                                    <button type="submit" class="btn-small btn-delete" onclick="return confirm('Supprimer cet article ?')">
                                        üóëÔ∏è Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">üìù</div>
                <p style="font-size: 1.125rem; margin-bottom: 1rem;">Vous n'avez pas encore d'articles</p>
                <a href="{{ path('app_article_new') }}" class="btn">Cr√©er mon premier article</a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
