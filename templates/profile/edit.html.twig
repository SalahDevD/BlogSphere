{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
<div class="edit-profile-container">
    <div class="edit-profile-card">
        <h1 class="edit-profile-title">‚úèÔ∏è Modifier mon profil</h1>

        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'error' ? 'error' : 'success' }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <form method="POST">
            {# Section Image de Profil #}
            <div class="profile-image-section">
                <h2 class="edit-profile-title" style="font-size: 1.25rem; margin-bottom: 1rem;">üñºÔ∏è Image de profil</h2>
                
                <div class="profile-image-preview">
                    <div class="profile-image-display" id="profileImageDisplay">
                        {% set profileImage = user.images|filter(img => img.isProfile)|first %}
                        {% if profileImage %}
                            <img src="{{ asset('uploads/profile/' ~ profileImage.filename) }}" alt="Profile">
                        {% else %}
                            {{ user.name|first|upper }}
                        {% endif %}
                    </div>
                    
                    <div class="profile-image-info">
                        <p style="color: var(--gray-700); margin-bottom: 0.5rem;">
                            <strong>Image actuelle</strong>
                        </p>
                        <p style="color: var(--gray-600); font-size: 0.9rem; margin-bottom: 1rem;">
                            {% if profileImage %}
                                Image de profil d√©finie
                            {% else %}
                                Aucune image de profil d√©finie
                            {% endif %}
                        </p>
                        
                        <div class="profile-image-actions">
                            <button type="button" class="btn-upload-profile" onclick="document.getElementById('profileImageInput').click();">
                                üì§ Modifier l'image
                            </button>
                            {% if profileImage %}
                                <button type="button" class="btn-remove-profile" onclick="removeProfileImage();">
                                    üóëÔ∏è Supprimer
                                </button>
                            {% endif %}
                        </div>
                        
                        <div id="uploadStatus" class="upload-status"></div>
                    </div>
                </div>

                <input type="file" id="profileImageInput" accept="image/*" style="display: none;">
            </div>

            {# Section Informations #}
            <div class="form-group">
                <label class="form-label" for="name">Nom complet <span style="color: var(--orange-primary);">*</span></label>
                <input type="text" 
                       id="name" 
                       name="name" 
                       class="form-control" 
                       value="{{ user.name }}" 
                       required
                       maxlength="255">
            </div>

            <div class="form-group">
                <label class="form-label" for="email">Email</label>
                <input type="email" 
                       id="email" 
                       name="email" 
                       class="form-control" 
                       value="{{ user.email }}" 
                       disabled 
                       style="background: var(--gray-200); cursor: not-allowed;">
                <small style="color: var(--gray-500); display: block; margin-top: 0.5rem;">
                    üìß L'email ne peut pas √™tre modifi√©
                </small>
            </div>

            <div class="form-group">
                <label class="form-label" for="bio">Biographie</label>
                <textarea id="bio" 
                          name="bio" 
                          class="form-control" 
                          maxlength="500"
                          placeholder="Parlez-nous de vous...">{{ user.bio }}</textarea>
                <span class="char-counter">
                    <span id="charCount">{{ user.bio|length|default(0) }}</span> / 500 caract√®res
                </span>
            </div>

            <div class="form-actions">
                <a href="{{ path('user_profile_index') }}" class="btn btn-outline btn-full">
                    ‚Üê Annuler
                </a>
                <button type="submit" class="btn btn-full">
                    üíæ Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Compteur de caract√®res pour la biographie
    const bioTextarea = document.getElementById('bio');
    const charCount = document.getElementById('charCount');
    
    if (bioTextarea && charCount) {
        bioTextarea.addEventListener('input', function() {
            charCount.textContent = this.value.length;
            
            // Changer la couleur si proche de la limite
            if (this.value.length > 450) {
                charCount.style.color = 'var(--orange-primary)';
            } else {
                charCount.style.color = 'var(--gray-500)';
            }
        });
    }

    // Gestion de l'image de profil
    const profileImageInput = document.getElementById('profileImageInput');
    const uploadStatus = document.getElementById('uploadStatus');

    if (profileImageInput) {
        profileImageInput.addEventListener('change', function(e) {
            if (this.files.length === 0) return;

            const file = this.files[0];
            const formData = new FormData();
            formData.append('image', file);

            // Afficher le statut de chargement
            uploadStatus.textContent = '‚è≥ Upload en cours...';
            uploadStatus.className = 'upload-status';
            uploadStatus.style.display = 'block';

            fetch('{{ path('profile_images_upload') }}', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Marquer comme image de profil
                    return fetch(`/profile/images/${data.imageId}/set-profile`, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    }).then(res => res.json());
                } else {
                    throw new Error(data.error || 'Erreur lors de l\'upload');
                }
            })
            .then(data => {
                if (data.success) {
                    uploadStatus.textContent = '‚úÖ Image de profil mise √† jour avec succ√®s!';
                    uploadStatus.className = 'upload-status success';
                    // Recharger la pr√©visualisation
                    setTimeout(() => location.reload(), 1500);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                uploadStatus.textContent = '‚ùå Erreur: ' + error.message;
                uploadStatus.className = 'upload-status error';
            })
            .finally(() => {
                profileImageInput.value = '';
            });
        });
    }

    function removeProfileImage() {
        if (!confirm('√ätes-vous s√ªr de vouloir supprimer votre image de profil?')) return;

        const removeBtn = event.target.closest('.btn-remove-profile');
        removeBtn.disabled = true;
        uploadStatus.textContent = '‚è≥ Suppression en cours...';
        uploadStatus.className = 'upload-status';
        uploadStatus.style.display = 'block';

        // Trouver l'ID de l'image de profil
        fetch('/profile/images/api/user-images', {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(images => {
            const profileImage = images.find(img => img.isProfile);
            if (!profileImage) {
                throw new Error('Image de profil non trouv√©e');
            }
            return fetch(`/profile/images/${profileImage.id}/delete`, { method: 'POST' });
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                uploadStatus.textContent = '‚úÖ Image supprim√©e avec succ√®s!';
                uploadStatus.className = 'upload-status success';
                setTimeout(() => location.reload(), 1500);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            uploadStatus.textContent = '‚ùå Erreur: ' + error.message;
            uploadStatus.className = 'upload-status error';
            removeBtn.disabled = false;
        });
    }
</script>
{% endblock %}
