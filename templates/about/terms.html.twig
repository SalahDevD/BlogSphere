{% extends 'base.html.twig' %}

{% block title %}Conditions d'utilisation - BlogSphere{% endblock %}

{% block stylesheets %}
<style>
    .terms-container {
        max-width: 900px;
        margin: 3rem auto;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .terms-container h1 {
        color: var(--color-primary);
        margin-bottom: 0.5rem;
        font-size: 2.5rem;
    }

    .terms-container .last-updated {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        font-style: italic;
    }

    .terms-container h2 {
        color: var(--color-accent);
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.5rem;
        border-bottom: 2px solid var(--color-accent);
        padding-bottom: 0.5rem;
    }

    .terms-container h3 {
        color: var(--color-primary);
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1.1rem;
    }

    .terms-container p {
        color: #333;
        line-height: 1.8;
        margin-bottom: 1rem;
    }

    .terms-container ul, 
    .terms-container ol {
        color: #333;
        margin-left: 2rem;
        margin-bottom: 1rem;
        line-height: 1.8;
    }

    .terms-container li {
        margin-bottom: 0.5rem;
    }

    .terms-container a {
        color: var(--color-accent);
        text-decoration: none;
    }

    .terms-container a:hover {
        text-decoration: underline;
    }

    .terms-container strong {
        color: var(--color-primary);
    }

    .back-link {
        display: inline-block;
        margin-top: 2rem;
        padding: 0.75rem 1.5rem;
        background: var(--color-accent);
        color: white;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        background: #ff9800;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(240, 187, 120, 0.3);
    }
</style>
{% endblock %}

{% block body %}
