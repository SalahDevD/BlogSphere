{% extends 'base.html.twig' %}

{% block title %}Inscription - BlogSphere{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/security.css') }}">
<style>
    /* Supprimer compl√®tement la zone beige */
    body {
        background: white !important;
        margin: 0 !important;
        padding: 0 !important;
    }
    main {
        padding: 0 !important;
        margin: 0 !important;
        background: transparent !important;
    }
    footer {
        margin-top: 0 !important;
    }
</style>
{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="orange-accent accent-1"></div>
    <div class="orange-accent accent-2"></div>
    
    <div class="auth-card">
        <div class="auth-header">
            <h1>Rejoignez-nous !</h1>
            <p>Cr√©ez votre compte et commencez √† partager</p>
        </div>

        {# Messages Flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    <span>{{ message }}</span>
                    <button type="button" class="btn-close" onclick="this.parentElement.remove()">√ó</button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="info-box">
            <p><strong>üìù Note :</strong> Vous serez automatiquement enregistr√© comme r√©dacteur. Votre premier article n√©cessitera une validation par un superviseur.</p>
        </div>

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="registration_firstName" class="form-label">
                    Pr√©nom <span style="color: #ef4444;">*</span>
                </label>
                {{ form_widget(registrationForm.firstName, {
                    'attr': {
                        'class': 'form-control' ~ (registrationForm.firstName.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Jean'
                    }
                }) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>

            <div class="form-group">
                <label for="registration_lastName" class="form-label">
                    Nom de famille <span style="color: #ef4444;">*</span>
                </label>
                {{ form_widget(registrationForm.lastName, {
                    'attr': {
                        'class': 'form-control' ~ (registrationForm.lastName.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Dupont'
                    }
                }) }}
                {{ form_errors(registrationForm.lastName) }}
            </div>

            <div class="form-group">
                <label for="registration_email" class="form-label">
                    Email <span style="color: #ef4444;">*</span>
                </label>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'form-control' ~ (registrationForm.email.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'votreemail@exemple.com'
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group">
                <label for="registration_password" class="form-label">
                    Mot de passe <span style="color: #ef4444;">*</span>
                </label>
                {{ form_widget(registrationForm.password, {
                    'attr': {
                        'class': 'form-control' ~ (registrationForm.password.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢'
                    }
                }) }}
                {{ form_errors(registrationForm.password) }}
                <small style="display: block; margin-top: 0.5rem; color: rgba(255, 255, 255, 0.7); font-size: 0.875rem;">
                    Minimum 8 caract√®res (1 majuscule, 1 minuscule, 1 chiffre)
                </small>
            </div>

            <div class="form-group">
                <div class="form-check">
                    {{ form_widget(registrationForm.termsAccepted, {
                        'attr': {
                            'class': 'form-check-input' ~ (registrationForm.termsAccepted.vars.errors|length > 0 ? ' is-invalid' : '')
                        },
                        'label': false
                    }) }}
                    <label for="registration_termsAccepted" class="form-check-label" style="white-space: nowrap;">J'accepte les <a href="{{ path('app_terms') }}" target="_blank" style="color: #ff9800; text-decoration: underline;">conditions d'utilisation</a> <span style="color: #ef4444;">*</span></label>
                </div>
                {{ form_errors(registrationForm.termsAccepted) }}
            </div>

            <button type="submit" class="btn-submit">
                Cr√©er mon compte ‚Üí
            </button>
        {{ form_end(registrationForm) }}

        <div class="auth-footer">
            <p>Vous avez d√©j√† un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
        </div>
    </div>
</div>

<script>
    // Auto-fermeture des alertes apr√®s 5 secondes
    document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            setTimeout(function() {
                alert.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-20px)';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            }, 5000);
        });
    });
</script>
{% endblock %}
