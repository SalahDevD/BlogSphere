        height: 28px;
        stroke-width: 3;
        stroke-linecap: round;
        stroke-linejoin: round;
    }

    .carousel-prev {
        left: -80px;
    }

    .carousel-next {
        right: -80px;
    }

    .carousel-control:hover {
        background: linear-gradient(135deg, var(--brown-primary) 0%, var(--beige-primary) 100%);
        color: var(--white);
        transform: translateY(-50%) scale(1.15);
        box-shadow: 0 12px 35px rgba(139, 90, 60, 0.4);
        border-color: var(--gold);
    }

    /* ============= INDICATEURS √âL√âGANTS ============= */
    .carousel-indicators {
        display: flex;
        gap: 12px;
        justify-content: center;
        margin-top: 2.5rem;
    }

    .indicator {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: var(--gray-300);
        border: 3px solid var(--gray-300);
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    .indicator.active {
