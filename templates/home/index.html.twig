        width: 100%;
        height: 500px;
        border-radius: 28px;
        overflow: hidden;
        box-shadow: 0 25px 70px rgba(139, 90, 60, 0.25);
        background: var(--white);
        border: 3px solid var(--beige-light);
    }

    .carousel-item {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        visibility: hidden;
        transform: scale(1.05) translateX(50px);
        transition: all 1s cubic-bezier(0.4, 0.0, 0.2, 1);
    }

    .carousel-item.active {
        opacity: 1;
        visibility: visible;
        z-index: 10;
        transform: scale(1) translateX(0);
    }

    .carousel-content {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .carousel-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .carousel-placeholder {
        width: 100%;
        height: 100%;
