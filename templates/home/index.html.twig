        height: 64px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        z-index: 20;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        box-shadow: 0 8px 25px rgba(139, 90, 60, 0.25);
        backdrop-filter: blur(10px);
