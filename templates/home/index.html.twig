{% block javascripts %}
<script>
    // ===== CAROUSEL JAVASCRIPT AM√âLIOR√â =====
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel-item');
    const indicators = document.querySelectorAll('.indicator');
    const totalSlides = slides.length;

    if (totalSlides > 0) {
        let carouselState = {
            currentSlide: currentSlide,
            autoPlayInterval: null,
            isAutoPlaying: true
        };

        function showSlide(index) {
            if (index >= totalSlides) {
                currentSlide = 0;
            } else if (index < 0) {
                currentSlide = totalSlides - 1;
            } else {
                currentSlide = index;
            }

            slides.forEach(slide => slide.classList.remove('active'));
            indicators.forEach(indicator => indicator.classList.remove('active'));

            slides[currentSlide].classList.add('active');
            if (indicators[currentSlide]) {
                indicators[currentSlide].classList.add('active');
            }

            const indexSpan = slides[currentSlide].querySelector('.article-index');
            if (indexSpan) {
                indexSpan.textContent = `${currentSlide + 1} / ${totalSlides}`;
            }
        }

        window.carouselNext = function() {
            showSlide(currentSlide + 1);
            restartAutoPlay();
        };

        window.carouselPrev = function() {
            showSlide(currentSlide - 1);
            restartAutoPlay();
        };

        window.carouselGoTo = function(index) {
            showSlide(index);
            restartAutoPlay();
        };

        function startAutoPlay() {
            if (carouselState.autoPlayInterval) {
                clearInterval(carouselState.autoPlayInterval);
            }
            
            carouselState.isAutoPlaying = true;
            carouselState.autoPlayInterval = setInterval(() => {
                window.carouselNext();
            }, 5000);
        }

        function stopAutoPlay() {
            clearInterval(carouselState.autoPlayInterval);
            carouselState.isAutoPlaying = false;
        }

        function restartAutoPlay() {
            stopAutoPlay();
            startAutoPlay();
        }

        if (totalSlides > 1) {
            const carousel = document.querySelector('.carousel');
            if (carousel) {
                carousel.addEventListener('mouseenter', stopAutoPlay);
                carousel.addEventListener('mouseleave', restartAutoPlay);

                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => {
                        window.carouselGoTo(index);
                    });
                });
            }

            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    window.carouselPrev();
                } else if (e.key === 'ArrowRight') {
                    window.carouselNext();
                }
            });

            startAutoPlay();
        }
    }
</script>
