    .carousel-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 1.25rem;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
