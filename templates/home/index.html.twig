        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10rem;
        color: var(--brown-primary);
        opacity: 0.3;
    }

    .carousel-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 65%;
        background: linear-gradient(
            to top,
            rgba(62, 39, 35, 0.95) 0%,
            rgba(62, 39, 35, 0.75) 40%,
            rgba(62, 39, 35, 0.4) 70%,
            transparent 100%
